<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E7C3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Enter Bird Details"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Bird Name:"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/idUpdateBirdName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Bird Name" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Bird Description:"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/idUPDBirdDescription"
        android:layout_width="397dp"
        android:layout_height="100dp"
        android:ems="10"
        android:layout_margin="10dp"
        android:gravity="start|top"
        android:hint="Add Description of bird"
        android:inputType="textMultiLine"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Bird Status:"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/idUPDBirdStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:hint="Enter Bird Status"
        android:layout_margin="10dp" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Bird Location:"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinnerEdtBirdLocation1"
        android:layout_width="388dp"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:ems="10" />

    <Button
        android:id="@+id/idBtnUpdateBird"
        android:layout_width="262dp"
        android:layout_height="47dp"
        android:text="Update Bird"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/idBtnDeleteBird"
        android:layout_width="262dp"
        android:layout_height="47dp"
        android:text="Delete Bird"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:layout_margin="10dp"/>

</LinearLayout>