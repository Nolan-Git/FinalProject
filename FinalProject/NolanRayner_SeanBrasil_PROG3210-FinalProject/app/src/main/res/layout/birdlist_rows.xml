<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical">
        <!--text view for our course name-->
        <ImageView
            android:id="@+id/idIVBirdImage"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/idTVBirdName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Bird Name"
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <!--text view for our course tracks-->
            <TextView
                android:id="@+id/idTVBirdLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="Bird Location"
                android:textColor="@color/black" />
            <!--text view for our course duration-->
            <TextView
                android:id="@+id/idTVBirdStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="Endangerment status"
                android:textColor="@color/black" />
        </LinearLayout>

        <!--text view for our course description-->

        <TextView
            android:id="@+id/idTVBirdDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="Description"
            android:textColor="@color/black" />
    </LinearLayout>
</androidx.cardview.widget.CardView>